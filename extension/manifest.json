{
    "manifest_version": 3,
    "version": "1.0",
    "name": "HACK.COMS Anti-Doomscroller",
    "icons": {
        "48": "/img/icon.svg",
        "96": "/img/icon.svg"
    },
    "action": {
        "default_icon": {
            "19": "/img/icon.svg",
            "38": "/img/icon.svg"
        }
    },
    "permissions": [
        "browsingData",
        "cookies",
        "management",
        "privacy",
        "storage",
        "tabs",
        "webRequest"
    ],
    "host_permissions": [
        "<all_urls>"
    ],
    "content_scripts": [
        {
            "matches": ["<all_urls>"],
            "js": ["main.js"]
        }
    ]
}